<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @album.name %>
</p>

<p>
  <b>Description:</b>
  <%= @album.description %>
</p>

<ul>
  <% @album.images.each do |image| %>
    <li><%= link_to(image_tag(image.subject.url(:thumb)), image_path(image)) %></li>
  <% end %>
</ul>


<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>
