<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @album.name %>
</p>

<p>
  <b>Description:</b>
  <%= @album.description %>
</p>

<ul>
  <% @album.images.each do |image| %>
    <li><%= link_to(image_tag(image.subject.url(:thumb)), category_album_image_path(@album.category, @album, image)) %></li>
  <% end %>
</ul>


<%= link_to 'Edit', edit_category_album_path(@album.category, @album) %> |
<%= link_to 'Back', category_albums_path(@album.category, @album) %>
