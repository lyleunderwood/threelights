<li>
  <% if album.images.empty? %>

  <% else %>
    <%= link_to((image_tag album.images.first.subject.url(:thumb)), [album.category, album]) %><br />
  <% end %>

  <strong><%= link_to(album.name, [album.category, album]) %></strong>
  <p class="details">
    <%= album.images.count %> files, last updated on <%= album.updated_at %>
  </p>
</li>
