<tr class="result image">
  <td>
    <%= link_to(image_tag(image.subject.url(:thumb)), category_album_image_path(image.album.category, image.album, image)) %>
    <p class="name">
      <%= hl hit, :name %>
    </p>
    <p class="description">
      <%= hl hit, :description %>
    </p>
  </td>
</tr>
